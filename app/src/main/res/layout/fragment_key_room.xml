<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.KeyRoomFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/qrcodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="QR CODE"
        android:textAppearance="@style/TextAppearance.Reply.Headline4" />

    <ImageView
        android:id="@+id/qrcodeImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/qrcodeTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrcodeImg"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_toLeftOf="@id/downloadBtn"
        android:text="Tải về "
        android:textAppearance="@style/TextAppearance.Reply.Body1" />

    <ImageButton
        android:id="@+id/downloadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrcodeImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:src="@drawable/ic_archive" />

    <TextView
        android:id="@+id/roomKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/downloadBtn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:text="ASDASDSASD"
        android:textAppearance="@style/TextAppearance.Reply.Body1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/downloadBtn"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_toLeftOf="@id/roomKey"
        android:text="Khóa phòng:"
        android:textAppearance="@style/TextAppearance.Reply.Body1" />

</RelativeLayout>